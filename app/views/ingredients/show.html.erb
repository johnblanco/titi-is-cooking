<p id="notice"><%= notice %></p>

<h1><%= @ingredient.name %></h1>

<p>
  <strong><%= @ingredient.amount_included.to_s + " " + @ingredient.measurement_unit%></strong>
</p>

<h3>Precios</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Precio</th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient.prices.each do |price| %>
      <tr>
        <td><%= price.created_at.strftime "%m/%Y" %></td>
        <td><%= price.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<%= link_to 'Nuevo precio', ingredients_path %> |
