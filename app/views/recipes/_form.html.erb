<%= form_for(@recipe) do |f| %>
  <div class="field">
    <%= f.label :name, "Nombre" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :portions, "Porciones" %><br>
    <%= f.number_field :portions %>
  </div>

  <h2>Tabla de ingredientes</h2>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad</th>
    </tr>
    </thead>

    <tbody>
    <% @recipe.ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= recipe.portions %></td>
        <td><%= link_to 'Eliminar', recipe, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit "Guardar", :class => "btn btn-primary" %>
  </div>
<% end %>
