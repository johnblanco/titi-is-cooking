<p id="notice"><%= notice %></p>

<h1>Lista de recetas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Porciones</th>
      <th>Costo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.portions %></td>
        <td><%= recipe.cost %></td>
        <td><%= link_to 'Ver', recipe %></td>
        <td><%= link_to 'Editar', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Eliminar', recipe, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva', new_recipe_path, :class => "btn btn-primary" %>
